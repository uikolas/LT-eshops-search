{% extends 'base.html.twig' %}

{% block body %}
    {% verbatim %}
    <div class="container-full">
        <div class="row">
            <div class="col-lg-12 text-center v-center">
                <h1>Paieška LT el. parduotuvėse*</h1>
                <h5>*Ieškoma po kolkas tik Skytech.lt, Kilobaitas.lt, 1a.lt</h5>
                <br><br><br>
                <form v-on:submit.prevent="search" class="col-lg-12">
                    <div class="input-group" style="width:440px;text-align:center;margin:0 auto;">
                        <input v-model="keyword" id="keyword" class="form-control input-lg" title="Paieška" placeholder="Įveskite raktažodį" type="text" required="required">
                        <span class="input-group-btn">
                            <button v-on:click="search" id="search" class="btn btn-lg btn-primary" type="button">Ieškoti</button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        <hr>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Surastos prekės</div>
                    <div class="panel-body">
                        <table id="table" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 20%;">Nuotrauka</th>
                                    <th style="width: 60%;">Pavadinimas</th>
                                    <th style="width: 10%; cursor: pointer;" v-on:click="sortBy">
                                        Kaina
                                        <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                                    </th>
                                    <th style="width: 10%;">Parduotuve</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="item in items">
                                    <td><img :src="item.image" /></td>
                                    <td><a :href="item.link" target="_blank">{{ item.name }}</a></td>
                                    <td>{{ item.price }}</td>
                                    <td>{{ item.shop }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endverbatim %}
{% endblock %}

{% block javascripts %}
    <script>
        var ajaxUrl = '{{ url('app_search') }}';
    </script>
{% endblock %}
